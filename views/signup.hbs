<body class="bg-light bg-pattern">
        <div class="account-pages my-5 pt-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card">
                            <div class="card-body p-4">
                                <div class="p-2">
                                    <h5 class="mb-5 text-center">Signup</h5>
                                    <form class="form-horizontal" action="/signup" method="POST">

                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group mb-4">
                                                    <label for="email">E-Mail</label>
                                                    <input type="text" class="form-control" id="email" name="email" placeholder="Enter email">
                                                </div>
                                                <div class="form-group mb-4">
                                                    <label for="password">Password</label>
                                                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
                                                </div>
                                                <div class="mt-4">
                                                    <button class="btn btn-success btn-block waves-effect waves-light" type="submit">Signup</button>
                                                </div>
                                                <div class="mt-4 text-center">
                                                    <a href="/" class="text-muted"><i class="mdi mdi-account-circle mr-1"></i> Already have an Account?</a>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end row -->
            </div>
        </div>
        <!-- end Account pages -->



</body>
